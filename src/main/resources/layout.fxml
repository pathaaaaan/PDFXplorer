<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pdfxplorer.controller.MainController"
            stylesheets="/stylesheet.css">

    <top>
        <VBox>
            <!-- Main Toolbar -->
            <ToolBar>
                <HBox spacing="10">
                    <Button fx:id="openButton" text="ðŸ“‚ Open PDF" />
                    <Separator orientation="VERTICAL" />
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Page:"/>
                        <TextField fx:id="pageNumberField" prefWidth="50" />
                        <Label text="/" />
                        <Label fx:id="totalPagesLabel" text="0" />
                        <Button fx:id="prevPageButton" text="â—€" />
                        <Button fx:id="nextPageButton" text="â–¶" />
                    </HBox>
                    <Separator orientation="VERTICAL" />
                    <HBox alignment="CENTER" spacing="5">
                        <Button fx:id="zoomOutButton" text="âž–" />
                        <Label fx:id="zoomLabel" text="100%" />
                        <Button fx:id="zoomInButton" text="âž•" />
                    </HBox>
                </HBox>
                <Pane HBox.hgrow="ALWAYS" />
                <HBox spacing="10">
                    <TextField fx:id="searchField" promptText="Search..." prefWidth="200" />
                    <Button fx:id="searchButton" text="ðŸ”" />
                    <Separator orientation="VERTICAL" />
                    <ToggleButton fx:id="darkModeToggle" text="ðŸŒ™" />
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
            <StackPane fx:id="imageContainer">
                <VBox fx:id="multiPageContainer" spacing="20" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                </VBox>
            </StackPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox fx:id="statusBar" styleClass="status-bar" alignment="CENTER_LEFT" spacing="20">
            <Label fx:id="fileNameLabel" text="No file loaded" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="pageInfoLabel" text="Page: 0/0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="searchResultsLabel" text="" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="zoomStatusLabel" text="Zoom: 100%" />
        </HBox>
    </bottom>
</BorderPane>